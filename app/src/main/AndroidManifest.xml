<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".KaziFastaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KaziFasta"
        tools:targetApi="31">
        <activity
            android:name=".ui.screens.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.KaziFasta" />
        <activity
            android:name=".ui.screens.auth.AuthActivity"
            android:exported="false"
            android:label="@string/title_activity_auth"
            android:theme="@style/Theme.KaziFasta" />
        <activity
            android:name=".ui.screens.gallery.GalleryActivity"
            android:exported="false"
            android:label="@string/title_activity_users"
            android:theme="@style/Theme.KaziFasta" />
        <activity
            android:name=".ui.screens.search.SearchActivity"
            android:exported="false"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.KaziFasta" />
        <activity
            android:name=".ui.screens.category.CategoryDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_category"
            android:theme="@style/Theme.KaziFasta" />
        <activity
            android:name=".ui.screens.profile.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.KaziFasta" />
        <activity
            android:name=".ui.screens.home.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.KaziFasta" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KaziFasta">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>